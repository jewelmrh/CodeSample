import re

s="Hi there! How are you? Come to see me if you are free."

sample=['[$\s|$?\s|$.]']
sample2=['[$\.|$!|$?]']

for x in sample:
  m=re.findall(x, s)
  print(m)


for y in sample2:
  m2=re.findall(y, s)
  print(m2)

l1=str(len(m))
l2=str(len(m2))

print("There are "+l1+" words and "+l2+" lines in this text.")


